<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/title"
            android:text="About Us"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/brandname"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/info"
                android:clickable="true"
                android:text="@string/aboutus"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="italic" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="Location -"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="30dp"
                android:text="@string/location"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text=" Email - Info@adservices.in"
                android:id="@+id/email"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="Web -"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/web"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:text="http://www.adservices.in/"
                android:textColor="#303F9F"
                android:textSize="20dp"
                android:textStyle="italic|bold"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Contacts -"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/call"
                android:scaleType="centerCrop"
                android:cropToPadding="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:text="+1 604 704 8811"
                android:textColor="#303F9F"
                android:textSize="20dp"
                android:textStyle="bold"
                android:clickable="true"
                android:id="@+id/num"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/call"
                android:scaleType="centerCrop"
                android:cropToPadding="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:text="+91 8888058537"
                android:textColor="#303F9F"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/numm"
                android:clickable="true"/>

        </RelativeLayout>

            <WebView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/webvv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/fb"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/facebook"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tw"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/tw"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="@string/back"
                    android:background="@drawable/show"
                    android:textSize="20sp"
                    android:id="@+id/prv"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <include layout="@layout/copy"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.gms.ads.AdView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/ad"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-3715652664770345/9286598713">
                </com.google.android.gms.ads.AdView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>