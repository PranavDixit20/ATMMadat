<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/atm_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:id="@+id/tt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.AdView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ad"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/na"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_selc"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/cyo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@color/btncolor"
            android:layout_marginTop="10dp"
            android:text="@string/toc"

            android:textSize="20sp"
            android:id="@+id/bitoc"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/btncolor"
            android:text="@string/Haw"
            android:textSize="20sp"
            android:id="@+id/biaci"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/btncolor"
            android:text="@string/bank_related_word_definations"
            android:textSize="20sp"
            android:id="@+id/wod"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/btncolor"
            android:text="@string/few_standard_error_message_of_atm_machine"
            android:textSize="20sp"
            android:id="@+id/emes"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/select_your_bank"
            android:background="@color/btncolor"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/syb"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/how_to_shop_with_your_debit_card_physicaly"
            android:background="@color/btncolor"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/swc"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/how_to_shop_online"
            android:background="@color/btncolor"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/so"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/btncolor"
                android:text="@string/back"
                android:textSize="20sp"
                android:id="@+id/biback"
                android:layout_gravity="center"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>