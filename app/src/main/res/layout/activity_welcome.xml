<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f6f4f4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title"
        android:text="@string/choose_your_bank"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="center"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="8"
                android:columnCount="3">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/one"
                    android:background="@mipmap/bom"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/two"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/bob"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/three"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/boi"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/four"
                    android:background="@mipmap/canlogo"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/five"
                    android:background="@mipmap/cboilogo" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:id="@+id/six"
                    android:background="@mipmap/hdfclogo"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/seven"
                    android:background="@mipmap/icicilogo"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/eight"
                    android:layout_gravity="center"
                    android:background="@mipmap/sbilogo" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:id="@+id/nine"
                    android:background="@mipmap/punjablogo"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ten"
                    android:background="@mipmap/unionlogo"
                    android:layout_marginLeft="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/eleven"
                    android:background="@mipmap/ax" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:id="@+id/twelve"
                    android:background="@mipmap/sbtlogo"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/thirteen"
                    android:background="@mipmap/sbpatlogo" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/fourteen"
                    android:background="@mipmap/sbim" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:id="@+id/fifteen"
                    android:background="@mipmap/idbi" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/sixteen"
                    android:background="@mipmap/uco2" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/seventeen"
                    android:background="@mipmap/orlogo" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:id="@+id/eighteen"
                    android:background="@mipmap/deblogo" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/nineteen"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ib" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                   android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/twenty"
                    android:background="@mipmap/syndicatelogo" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:id="@+id/twentyone"
                    android:background="@mipmap/pnslogo" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/twentytwo"
                    android:background="@mipmap/vijlogo" />


                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/twentythree"
                    android:background="@drawable/sb" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:id="@+id/twentyfour"
                    android:background="@drawable/yb" />

            </GridLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="@string/back"
                android:background="@drawable/show"
                android:textSize="15sp"
                android:id="@+id/back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
</ScrollView>
        <com.google.android.gms.ads.AdView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/ad"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
</LinearLayout>
