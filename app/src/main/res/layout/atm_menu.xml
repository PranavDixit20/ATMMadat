<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/atm_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title"
        android:text="@string/option_selc"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal|start"
            android:gravity="start"
            android:id="@+id/na"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/bank_information"
            android:background="@drawable/show"
            android:textSize="20sp"
            android:id="@+id/bi"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/atm_card_information"
            android:background="@drawable/show"
            android:textSize="20sp"
            android:id="@+id/aci"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/withdrawal_information"
            android:background="@drawable/show"
            android:textSize="20sp"
            android:id="@+id/wi"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/check_balance"
            android:background="@drawable/show"
            android:textSize="20sp"
            android:id="@+id/bc"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="@string/back"
                android:layout_gravity="center"
                android:background="@drawable/show"
                android:textSize="15sp"
                android:id="@+id/backk"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <com.google.android.gms.ads.AdView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/ad"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id">
                </com.google.android.gms.ads.AdView>
            </RelativeLayout>

    </LinearLayout>
</LinearLayout>
